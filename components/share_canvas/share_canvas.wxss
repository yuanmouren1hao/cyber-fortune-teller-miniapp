
.canvas-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.85);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.canvas-container {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 30rpx;
}

.button-group {
  margin-top: 40rpx;
  display: flex;
  width: 90%;
  justify-content: space-around;
  flex-wrap: wrap;
}

.save-btn, .share-btn, .close-btn {
  margin: 0 10rpx 20rpx;
  padding: 20rpx 0;
  width: 220rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.save-btn {
  background: linear-gradient(to right, #FFD700, #FFA500);
  color: #141428;
  font-weight: bold;
}

.share-btn {
  background: linear-gradient(to right, #8A2BE2, #9370DB);
  color: #FFFFFF;
}

.close-btn {
  background-color: rgba(180, 180, 200, 0.8);
  color: #FFFFFF;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.share-tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}
