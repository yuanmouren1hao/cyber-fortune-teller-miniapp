
.container {
  justify-content: flex-start;
  padding-top: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.form-group {
  width: 100%;
  background-color: #28283C;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.input-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #141428;
}

.input-item:last-child {
  border-bottom: none;
}

.picker-value {
  color: #B4B4C8;
}

.textarea-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  color: #FFFFFF;
}

.primary-button {
  margin-top: 80rpx;
}
