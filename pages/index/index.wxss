
.container {
  justify-content: space-around;
  padding: 80rpx 40rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2px solid #FFD700;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #FFD700;
  margin-top: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #B4B4C8;
  margin-top: 10rpx;
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
