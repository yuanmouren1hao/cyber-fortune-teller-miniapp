
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 未授权访问样式 */
.unauthorized-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  text-align: center;
  padding: 40rpx;
}

.lock-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.unauthorized-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
}

/* 已授权访问样式 */
.result-container {
  width: 100%;
}

.unlock-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(to right, #8A2BE2, #9370DB);
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  color: white;
}

.unlock-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.unlock-text {
  font-size: 30rpx;
  font-weight: bold;
}

/* 运势关键词 */
.fortune-keyword {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 40rpx;
}

.keyword-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #FFD700;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  background: linear-gradient(to bottom, #FFD700, #FFA500);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.8);
}

.card {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #8A2BE2;
  padding-left: 20rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.share-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.primary-button {
  background: linear-gradient(to right, #8A2BE2, #9370DB);
  color: white;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 32rpx;
  width: 80%;
  margin: 20rpx auto;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(138, 43, 226, 0.3);
}

.primary-button[disabled] {
  background: linear-gradient(to right, #B8A6D9, #C8BFDD);
  color: rgba(255, 255, 255, 0.8);
}

.share-button {
  background-color: #fff;
  color: #8A2BE2;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 32rpx;
  width: 80%;
  margin: 20rpx auto;
  text-align: center;
  border: 2rpx solid #8A2BE2;
  box-shadow: 0 4rpx 10rpx rgba(138, 43, 226, 0.1);
}

.share-tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.error-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 30rpx;
}
